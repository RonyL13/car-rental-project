<!DOCTYPE html>
<html lang="en">
    <%- include('./components/head.ejs') %>
    <link rel="stylesheet" href="styles/register.css">
<body>
    <%- include('./components/navbar.ejs') %>

    <div class="form-container">
        <form class="addCustomerForm">
            <div class="form-titles">
                <ion-icon name="person-circle"></ion-icon>
                <h2>Register</h2>
            </div>
            <div class="form-inputs-container">
                <div class="input-container">
                    <input type="text" name="name" id="nameId" placeholder="Full Name" required>
                </div>
                <div class="input-container">
                    <input type="password" name="password" id="passwordId" placeholder="Password" required>
                </div>
                <div class="input-container">
                    <input type="password" id="confirmId" placeholder="Confirm Password" required>
                </div>
                <div class="input-container">
                    <input type="email" name="email" id="emailId" placeholder="Email Address" required> 
                </div>
                <div class="input-container">
                    <input type="text" name="phone" id="phoneId" placeholder="Phone Number" required>
                </div>
                <div class="input-container">
                    <input type="text" name="dl" id="dlId" placeholder="Driver's License" required>
                </div>
                <div class="input-container">
                    <select name="" id="genderId">
                        <option value="male">male</option>
                        <option value="female">female</option>
                        <option value="other">other</option>
                    </select>
                </div>
            </div>
            <div class="addCustomerErrorContainer"></div>
            <div class="submitContainer">
                <button class="submitBtn" type="submit">Register</button>
            </div>
            <div class="form-footer">
                <p>Already have an account? <a href="/login">Sign In</a></p>
            </div>
        </form>
    </div>
    <%- include('./components/footer.ejs') %>

    <script src="logic/register.js"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/register.css">
<body>
    <%- include('./partials/navbar.ejs') %>

    <div class="formContainer">
        <form id="form">
            <div class="labelPlusInputContainer">
                <label for="">Full name</label>
                <input type="text" name="name" id="nameId" required>
            </div>
            <div class="labelPlusInputContainer">
                <label for="">Password</label>
                <input type="text" name="password" id="passwordId" required>
            </div>
            <div class="labelPlusInputContainer">
                <label for="">Confirm password</label>
                <input type="text" id="confirmId" required>
            </div>
            <div class="labelPlusInputContainer">
                <label for="">Email address</label>
                <input type="text" name="email" id="emailId" required>
            </div>
            <div class="labelPlusInputContainer">
                <label for="">Phone number</label>
                <input type="text" name="phone" id="phoneId" required>
            </div>
            <div class="labelPlusInputContainer">
                <label for="">Driver's license</label>
                <input type="text" name="dl" id="dlId" required>
            </div>
            <div class="labelPlusInputContainer">
                <label for="">Gender</label>
                <select name="" id="genderId">
                    <option value="male">male</option>
                    <option value="female">female</option>
                    <option value="other">other</option>
                </select>
            </div>
            <div id="error"></div>

            <button class="submitBtn" type="submit">Submit</button>
        </form>
    </div>

    <script src="/register.js"></script>
</body>
</html>